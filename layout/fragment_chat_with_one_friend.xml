<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#CACACA"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_chatWithFriend_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="#00000000"
            android:src="@drawable/back_icon"/>

        <TextView
            android:id="@+id/txt_chatWithFriend_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="admin"
            android:textColor="#002232"
            android:textAlignment="center"
            android:textSize="25sp" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#CACACA" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFF8DD">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/icon_photo"
            android:id="@+id/btn_send_picture"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:id="@+id/input_chat"
            android:background="@drawable/border_input_box"
            android:layout_margin="5dp"/>


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:src="@drawable/icon_smile_face"
            android:id="@+id/btn_send_emoji"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:background="#00000000"
            android:text="发送"
            android:src="@drawable/icon_send"
            android:id="@+id/btn_send_msg"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp" />
    </LinearLayout>
</LinearLayout>
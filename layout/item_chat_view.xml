<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:minHeight="90dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/border_input_box"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_baseline_chat_24"/>

    <ImageView
        android:id="@+id/new_msg_sign"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-7.5dp"
        android:layout_marginLeft="-7.5dp"
        android:layout_marginTop="7.5dp"
        android:layout_toEndOf="@id/logo"
        android:layout_toRightOf="@id/logo"
        android:src="@drawable/new_msg_sign"
        android:visibility="visible" />

    <TextView
        android:id="@+id/who"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="测试11111565656561111111"
        android:textSize="20sp"
        android:lines="1"
        android:textColor="#0664AF"
        android:layout_toRightOf="@id/logo"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/logo"
        android:gravity="center_vertical"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp" />
    <TextView
        android:id="@+id/msg"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="测试消息内容11111111"
        android:lines="1"
        android:layout_toRightOf="@id/logo"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="100dp"
        android:textColor="#403F3F"
        android:layout_marginRight="100dp"
        android:layout_toEndOf="@id/logo" />

    <TextView
        android:id="@+id/msg_time"
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:text="上午12:00"
        android:gravity="bottom"/>


</RelativeLayout>